<h2>Login</h2>
<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email, nil, required: true %>
  </div>

  <div>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password, required: true %>
  </div>

  <%= submit_tag "Login", class: "btn btn-primary" %>
<% end %>

<p>Don't have an account? <%= link_to "Sign Up", new_user_path %></p>
