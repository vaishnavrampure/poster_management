<% if current_user.has_permission?("view:user") %>
  <h1><%= @user.name %></h1>
  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Role:</strong> <%= @user.role %></p>

  <%= link_to "Back to Users", users_path, class: "btn btn-secondary mt-3" %>
<% else %>
  <div class="alert alert-warning mt-4">
    You are not authorized to view this user's details.
  </div>
  <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-secondary mt-3" %>
<% end %>
