<h1><%= @campaign.name %></h1>
<p>Status: <%= @campaign.status %></p>

<h3 class="mt-4">Campaign Images</h3>

<% if @images.any? %>
  <div class="row">
    <% @images.each do |image| %>
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm">
          <%= image_tag image.file.url, class: "card-img-top", alt: "Campaign image" %>
          <div class="card-body p-2">
            <p class="card-text text-muted small mb-0">Uploaded at <%= image.created_at.strftime("%b %d, %Y") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No images uploaded for this campaign yet.</p>
<% end %>
