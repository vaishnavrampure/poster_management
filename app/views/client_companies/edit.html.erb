<h1>Edit Client</h1>

<% if current_user.has_permission?("update:client_companies") %>
  <%= form_with model: @client_company, url: client_path(@client_company), local: true do |form| %>
    <% if @client_company.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @client_company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Name Field -->
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <!-- Status Field -->
    <div class="form-group mt-3">
      <%= form.label :status %>
      <%= form.select :status, ["Active", "Pending", "Completed"], {}, class: "form-select" %>
    </div>

    <div class="form-group mt-3">
      <%= form.submit "Update Client", class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-warning mt-4">
    You are not authorized to edit this client.
  </div>
<% end %>

<%= link_to "Back to Clients", clients_path, class: "btn btn-secondary mt-3" %>
